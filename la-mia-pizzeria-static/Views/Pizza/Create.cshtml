@model Pizza

@{
    ViewData["Title"] = "Crea nuova pizza";
}

<h2>Crea nuova pizza</h2>

<form asp-action="Create" method="post" asp-controller="Pizza">
    <div class="form-group">
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descrizione">Descrizione:</label>
        <textarea asp-for="Descrizione" class="form-control"></textarea>
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prezzo">Prezzo:</label>
        <input type="number" step="0.5" asp-for="Prezzo" class="form-control" />
        <span asp-validation-for="Prezzo" class="text-danger"></span>
    </div>

    <div class="text-center my-3">
        <button type="submit" class="btn btn-primary">Crea</button>
    </div>
</form>

